<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:divider="?android:dividerHorizontal"
              android:showDividers="middle"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    
    <LinearLayout
        android:id="@+id/search_flight_container"
        android:layout_margin="15dp"
        android:background="@drawable/flight_item_selector"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/search_flight_top_divider"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/search_flight_city_to"
                android:text="CityTo"
                android:textSize="20dp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/search_flight_city_from"
                android:text="CityFrom"
                android:textSize="20dp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/search_flight_date_dep"
                android:text="dateDep"
                android:textSize="15dp"
                android:textColor="@android:color/holo_red_light"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/search_flight_date_arr"
                android:text="dateArr"
                android:textSize="15dp"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/holo_red_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/search_flight_price_pert_ticket"
                    android:text="200"
                    android:textSize="14dp"
                    android:textColor="@android:color/holo_purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="$ per ticket"
                    android:textSize="14dp"
                    android:textColor="@android:color/holo_purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Free place count: "
                    android:textSize="14dp"
                    android:textColor="@android:color/holo_purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/search_flight_free_place_count"
                    android:text="10"
                    android:textSize="14dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@android:color/holo_purple"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/search_flight_bottom_divider"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>